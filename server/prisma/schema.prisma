generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Diagnoser {
  id             String  @id  @default(uuid())
  name           String
  email          String  @unique
  password       String
  organization   String

  diseases Disease[]
}

model Doctors {
  id             String     @id  @default(uuid())
  name           String
  email          String     @unique
  password       String
  organization   String
}

model Patients {
  id             String     @id  @default(uuid())
  name           String
  email          String     @unique
  password       String

  diseases Disease[]

}

model Disease {
  id             String     @id @default(uuid())
  name           String
  type           String

  diagnoserid    String
  patientid      String
  analysis       String?
  diagnoser      Diagnoser  @relation(fields: [diagnoserid], references: [id])
  patient        Patients   @relation(fields: [patientid], references: [id])
}


